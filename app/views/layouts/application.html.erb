<!DOCTYPE html>
<html>
<head>
  <title>Home Cooking</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<header class="main">
  <%= image_tag 'rails.png', alt: 'HomeCooking' %>
  <h1><%= @page_title %></h1>
</header>
<section class="content">
  <!--Side Bar-->
  <nav class="side_nav">
    <!--Every User will see this-->
    <ul>
      <li><a href="/">Home</a></li>
    </ul>
    <!--Logged In users will see this-->
    <% if session[:user_id] %>
      <nav class="logged_in_nav">
        <ul>
          <li><%= link_to 'New Post', new_post_path %></li>
          <li><%= button_to 'Logout', logout_path, method: :delete, remote: true %></li>
        </ul>
      </nav>
      <!--Logged Out users will see this-->
    <% else %>
      <nav class="logged_in_nav">
        <ul>
          <li><%= button_to 'Login', login_path, method: :post, remote: true %></li>
        </ul>
      </nav>
    <% end %>
  </nav>
  <!--Calling the controllers-->
  <main class='<%= controller.controller_name %>'>
    <%= yield %>
  </main>
</section>
</body>
</html>
